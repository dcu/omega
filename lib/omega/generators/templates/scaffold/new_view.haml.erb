#<%= underscore_name %>-new
  %h1
    New <%= class_name %>

  %form.form-horizontal(ng-submit="save()")
    <%- fields.each do |name, type| -%>
    <%- next if name =~ /(^_)|(_id$)/ %>

    .control-group
      %label.control-label(for="<%= name %>")
        <%= name.titleize %>
      .controls
        %input(type="text" name="<%= name %>" ng-model="<%= resource_name %>.<%= name %>")
    <%- end %>
    .form-actions
      %button.btn.btn-primary(type="submit")
        Create <%= resource_name %>

